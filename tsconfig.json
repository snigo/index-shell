{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ]
}